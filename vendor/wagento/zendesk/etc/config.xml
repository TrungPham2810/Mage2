<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <zendesk>
            <ticket>
                <frontend>
                    <customer_account_order_ticket>1</customer_account_order_ticket>
                </frontend>
            </ticket>
            <zendesk_m2app>
                <order_qty_limit>5</order_qty_limit>
                <customer_fields><![CDATA[created_at,group,lifetime_sales,average_sale,telephone]]></customer_fields>
                <order_fields><![CDATA[link,status,total,subtotal,items,billing_address,shipping_address,payment_method,shipping_method]]></order_fields>
            </zendesk_m2app>
        </zendesk>
    </default>
</config>
